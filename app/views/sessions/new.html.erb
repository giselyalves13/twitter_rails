<%= form_for :session, url: sign_in_path do |f| %>
  <div class="field">
    <%= f.label 'Usuário:' %><br />
    <%= f.text_field :user, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label 'Senha' %><br />
    <%= f.password_field :password_digest, autocomplete: "off" %>
  </div>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  <p>Novo usuário? <%= link_to "Crie uma conta!", new_user_path %></p>
<% end %>

